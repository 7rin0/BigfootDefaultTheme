{% extends 'BigfootDefaultThemeBundle::base.html.twig' %}

{% block body %}
    {% include 'BigfootDefaultThemeBundle:layout:navbar.html.twig' %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                {% block sidebar %}
                    {{ knp_menu_render('main', { 'currentClass': 'active', 'ancestorClass': 'active open' }) }}
                {% endblock %}
            </div>
        </div>

        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            {% block breadcrumb %}
                {% include 'BigfootDefaultThemeBundle:layout:breadcrumb.html.twig' with { 'name': 'main' } %}
            {% endblock %}

            {% include 'BigfootDefaultThemeBundle:layout:flash.html.twig' %}

            {% block content %}
            {% endblock %}
        </div>
    </div>

    <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
        <i class="icon-double-angle-up icon-only bigger-110"></i>
    </a>
{% endblock %}
